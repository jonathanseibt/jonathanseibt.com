{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "simple-import-sort",
    "eslint-plugin-import"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "sort-imports": "off",
    "import/first": "error",
    "import/newline-after-import": "error",
    "import/no-duplicates": "error",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": false,
        "optionalDependencies": false,
        "peerDependencies": false,
        "bundledDependencies": false
      }
    ],
    "eol-last": "error",
    "@typescript-eslint/no-namespace": "off",
    "@typescript-eslint/explicit-module-boundary-types": "error",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          "./*",
          "src/components/*",
          "@material-ui/*/*"
        ]
      }
    ],
    "no-restricted-syntax": [
      "error",
      {
        "selector": "ImportDeclaration[source.value='@material-ui/core'] > ImportSpecifier[imported.name='Box']",
        "message": "Use 'Box' from 'src/components' instead."
      },
      {
        "selector": "ImportDeclaration[source.value='@material-ui/core'] > ImportSpecifier[imported.name='Typography']",
        "message": "Use 'Typography' from 'src/components' instead."
      }
    ]
  },
  "overrides": [
    {
      "files": "**/*.js",
      "env": {
        "node": true
      },
      "rules": {
        "simple-import-sort/imports": "off",
        "import/order": [
          "error",
          {
            "newlines-between": "always"
          }
        ]
      }
    }
  ]
}
